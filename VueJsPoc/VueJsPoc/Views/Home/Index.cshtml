<h3>App 1</h3>
<div id="app">
    {{ message }}
</div>

<h3>App 2</h3>
<div id="app-2">
    <span v-bind:title="message">
        Hover your mouse over me for a few seconds
        to see my dynamically bound title!
    </span>
</div>

<h3>App 3</h3>
<div id="app-3">
    <span v-if="seen">Now you see me</span>
    <button v-on:click="reverseMessage">{{!seen ? 'Show Button' : 'Hide Button'}}</button>
</div>

<h3>App 4</h3>
<div id="app-4">
    <ol>
        <li v-for="todo in todos">
            {{ todo.text }}
        </li>
    </ol>
</div>

<h3>App 5</h3>
<div id="app-5">
    <p>{{ message }}</p>
    <input v-model="message">
</div>